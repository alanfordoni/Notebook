<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/checkbox_list_main"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/rv_shape"
    android:elevation="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="check"
        android:textSize="16sp"
        android:maxLines="1"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/colorDarkGray"
        android:id="@+id/checkbox_list_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_layout"
        android:orientation="vertical"
        android:layout_below="@id/checkbox_list_title">

        <CheckBox
            android:id="@+id/checkbox_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:maxLines="1"
            android:clickable="false"/>

        <CheckBox
            android:id="@+id/checkbox2_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:maxLines="1"
            android:clickable="false"/>

        <CheckBox
            android:id="@+id/checkbox3_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:maxLines="1"
            android:clickable="false"/>

        <CheckBox
            android:id="@+id/checkbox4_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:maxLines="1"
            android:clickable="false"/>

        <CheckBox
            android:id="@+id/checkbox5_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGray"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:maxLines="1"
            android:clickable="false"/>

    </LinearLayout>

</RelativeLayout>