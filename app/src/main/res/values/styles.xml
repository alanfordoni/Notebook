<resources>

    <!-- ParentActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorBrown</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowIconStyle</item>
    </style>

    <style name="OverflowIconStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorDirtyWhite</item>
    </style>

    <style name="CustomTextAppearance" >
        <item name="android:fontFamily">@font/courgette_r</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDirtyWhite</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomTodoTextAppearance">
        <item name="android:fontFamily">@font/courgette_r</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorForestGreen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TabLayoutAppearance">
        <item name="android:fontFamily">@font/courgette_r</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/colorDirtyWhite</item>
    </style>

    <style name="ArchiveToolbarText">
        <item name="android:fontFamily">@font/courgette_r</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDirtyWhite</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorDarkGray</item>
        <item name="android:background">@color/colorForestGreen</item>
    </style>

    <style name="text_font_style_roboto_medium" parent="android:TextAppearance">
        <item name="android:textColor">#3c3c3c</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="text_font_style_roboto_light" parent="android:TextAppearance">
        <item name="android:textColor">#3c3c3c</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

</resources>
